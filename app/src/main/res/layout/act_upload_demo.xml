<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kwai.upload.demo.ui.ActUploadDemo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选择文件"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/applyUploadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_weight="1"
                android:text="申请上传" />

            <Button
                android:id="@+id/commitUploadBtn"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="确认上传" />
            <Button
                android:id="@+id/btnMediaInfo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="获取媒资" />

            <Button
                android:id="@+id/btnDelMediaInfo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="删除媒资" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvChooseFileDesc"
            android:text="选中的待上传文件："
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="申请结果："
            android:background="#FEFFE6"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:id="@+id/applyResultDesc"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="1dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:background="#E4F9E1"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:id="@+id/amsUploadResultDesc"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="1dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:background="#E4F9E1"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:id="@+id/commitResultDesc"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="1dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:text="媒资信息："
            android:background="#11FFE6"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:visibility="gone"
            android:id="@+id/mediaInfo"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="1dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>